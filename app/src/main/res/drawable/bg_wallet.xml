<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp"/>
                    <solid android:color="#25000000"/>
                    <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp"/>
                    <size android:height="40dp" android:width="110dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp"/>
                    <solid android:color="#25000000"/>
                    <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp"/>
                    <size android:height="40dp" android:width="110dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp"/>
                    <solid android:color="#25000000"/>
                    <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp"/>
                    <size android:height="40dp" android:width="110dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp"/>
                    <solid android:color="#25000000"/>
                    <stroke android:width="2dp" android:color="@color/white"/>
                    <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp"/>
                    <size android:height="40dp" android:width="110dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
