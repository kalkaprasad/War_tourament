                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_navigate" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/myWalletCard"
