                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/aboutIcon"
                            android:fontFamily="@font/lato_black"
                            android:text="@string/about_us"
                            android:textSize="17sp"
